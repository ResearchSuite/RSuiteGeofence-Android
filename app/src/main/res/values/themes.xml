<resources>

    <!-- Base application theme. -->
    <style name="Theme.YADL" parent="Theme.Backbone">
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Text Color for ActionBar and Text -->
        <item name="alertDialogTheme">@style/Theme.YADL.Dialog</item>
        <item name="android:alertDialogTheme">@style/Theme.YADL.Dialog</item>

        <item name="android:textColor">@color/rsb_warm_gray</item>
        <item name="android:textColorPrimary">@color/rsb_warm_gray</item>
        <item name="android:textColorSecondary">@color/rsb_warm_gray</item>

        <item name="colorControlNormal">@color/rsb_warm_gray</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/rsb_list_divider</item>

        <item name="toolbarTheme">@style/Theme.YADL.Toolbar</item>
        <item name="passcodeTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
        <item name="icontablayoutStyle">@style/Widget.YADL.IconTabLayout</item>
        <item name="submitbarStyle">@style/Widget.YADL.SubmitBar</item>
        <item name="emptyviewStyle">@style/Widget.YADL.EmptyView</item>
    </style>

    <style name="Theme.YADL.Toolbar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="toolbarStyle">@style/Widget.YADL.Toolbar</item>
    </style>

    <style name="Theme.YADL.Survey">
        <item name="toolbarTheme">@style/Theme.YADL.Toolbar.Transparent</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.YADL.Toolbar.Transparent">
        <item name="colorControlNormal">@color/rsb_warm_gray</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="toolbarStyle">@style/Widget.YADL.Toolbar.Transparent</item>
    </style>

    <style name="Theme.YADL.Main">
        <item name="toolbarTheme">@style/Theme.YADL.Toolbar.Main</item>
    </style>

    <style name="Theme.YADL.Toolbar.Main">
        <item name="toolbarStyle">@style/Base.Widget.YADL.Toolbar</item>
    </style>

    <style name="Theme.YADL.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/rsb_warm_gray</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Theme.YADL.Settings">
        <item name="android:textColor">@color/text_color_settings_title</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/text_color_settings_summary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="preferenceTheme">@style/Theme.YADL.Settings.Preference</item>
    </style>

    <style name="Theme.YADL.Settings.Preference"
        parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.YADL</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.YADL</item>
    </style>

    <style name="Theme.YADL.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/rsb_warm_gray</item>
    </style>

    <style name="Theme.YADL.Onboarding">
        <item name="android:windowBackground">@color/gray</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
    </style>

    <style name="Theme.YADL.Video">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

</resources>
